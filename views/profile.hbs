<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>PROFILE</h1>
    </div>
  </div>

  <div class="row profileRow">
    <div class="col">
      <img src="http://graph.facebook.com/{{user.facebookId}}/picture?type=large"
        class="img-fluid imgProfile" alt="">
        <div class="myPictures">
          <a name="" id="" class="btn btn-primary" href="/profile/myPictures" role="button">Pictures</a>
        </div>
    </div>
    <div class="col">
      <div class="card profileCard">
        <div class="card-header">
          <h5>{{user.username}}
          </h5>
        </div>
        <div class="card-body rounded">
          <h6 class="card-title">{{user.currentGame.name}}</h6>
          <p class="card-text">Current Point: {{user.currentSpot.spotDescription}}</p>
        </div>

      </div>
    </div>

  </div>

  <div class="row buttonChoice">
    <div class="col">
      <a name="" id="" class="btn buttonChoiceGame" href="/game/newGame" role="button"><h4>Create Game</h4><p>Create your own game and invite your friends to start a challenge</p></a>
    
    </div>
  </div>
  <div class="row buttonChoice">
       <div class="col">
      <a name="" id="" class="btn  buttonChoiceGame" href="/game/joinGame" role="button"><h4>Join Game</h4><p>Join a friend challenge and prove your habilities</p></a>
    </div>
  </div>
</div>