<div class="container containerNewGame">
  <div class="row">
    <div class="col-sm">
       <input id="pac-input" class="controls" type="text" placeholder="Search Box">
      <div id="map"></div>
    </div>



    <form action="/game/newGame" method="POST" id="newGameForm">
      <div id="markersInfo">
        <div class="labels" id="markersInfoLabels">
          <label for="gameTitle" id="gameTitle">Enter title for your Game:</label>
          <label for="gameDescription">Game Description:</label>
          <label for="gameReward">The reward:</label>
          <label for="startDate">Start Date and Time</label>
          <label for="endDate">Finish Date and Time</label>
        </div>
        <div class="inputs" id="markersInfoInputs">
          <input type="text" name="gameTitle" required>
          <input type="text" name="gameDescription">
          <input type="text" name="gameReward">
          <input type="date" name="startDate" required>
          <input type="date" name="endDate" required>
          <input type="hidden" name="totalSpots" value='' id="totalSpots">
        </div>
      </div>
        <button type="submit" class="createGameButton">Create Game</button>
        <div class="imageInfo" id="imageInfo">
          
        </div>
    </form>



    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyCekv9TIkClXh5EfD8V7pObO2gTrs_g__A"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.min.js"></script>
    <script type="text/javascript" src="../javascripts/map.js"></script>